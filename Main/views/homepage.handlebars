<!-- Loop over each object in the articles array -->
{{#each articles  as |article| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/article/{{article.id}}">{{article.name}}</a>
    </h2>
{{!-- insert article body here? --}}
    <p>Created by {{article.user.name}} on {{format_date article.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{article.description}}
    </p>
  </div>
</div>
{{/each}}
